        <div class="item">
            <div>URL do Avatar</div>
            <div>
                <input 
                    type="url" 
                    placeholder="http://"
                    name="avatar_url"
                    value="{{ instructor.avatar_url }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <input 
                    type="text" 
                    placeholder="Digite o seu nome"
                    name="name"
                    value="{{ instructor.name }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value="{{ instructor.birth }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="gender" 
                        value="M"
                        {% if instructor.gender == 'M' %}
                            checked
                        {% endif %}
                    >Masculino
                </span>
                <span>
                    <input 
                        type="radio" 
                        name="gender" 
                        value="F"
                        {% if instructor.gender == 'F' %}
                            checked
                        {% endif %}
                    >Feminino
                </span>
            </div>
        </div>
        
        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text"
                    placeholder="Separe os serviços prestados por vírgula"
                    name="services"
                    value="{{ instructor.services }}"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>