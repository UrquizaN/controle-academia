{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <div class="header">
        <a href="/members/create" class="button">Novo</a>
        <form action="/members">
            <input 
                name="filter"
                type="text"
                placeholder="Nome ou email"
                value="{{ filter }}"
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>
    <table width="100%">
        <thead>
            <tr>
                <th>Alunos</th>
                <th>E-mail</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Opção</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                    <td>
                        <span 
                            style="background-image: url({{ member.avatar_url }})"
                        >
                        </span>
                        {{ member.name }}</td>
                    <td><div>{{ member.email }}</div></td>
                    <td><div>{{ member.height }}cm</div></td>
                    <td><div>{{ member.weight }}kg</div></td>
                    <td>
                        <a href="/members/{{ member.id }}">Visualizar</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>

    <div class="pagination"
        data-page={{ paginate.page }}
        data-total = {{ paginate.total }}
        data-filter = {{ filter }}
    >
    </div>
</div>

{% endblock content %}