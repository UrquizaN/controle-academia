{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/members/create">Novo membro</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Alunos</th>
                <th>E-mail</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Opção</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                    <td>
                        <span 
                            style="background-image: url({{ member.avatar_url }})"
                        >
                        </span>
                        {{ member.name }}</td>
                    <td><div>{{ member.email }}</div></td>
                    <td><div>{{ member.height }}cm</div></td>
                    <td><div>{{ member.weight }}kg</div></td>
                    <td>
                        <a href="/members/{{ member.id }}">Visualizar</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>

{% endblock content %}