{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8325170/500x500) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Novo Instrutor</h3>

        <div class="item">
            <div>URL do Avatar</div>
            <div>
                <input 
                    type="url" 
                    placeholder="http://"
                    name="avatar-url"
                >
            </div>
        </div>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <input 
                    type="text" 
                    placeholder="Digite o seu nome"
                    name="name"
                >
            </div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="gender" 
                        value="M"
                    >Masculino
                </span>
                <span>
                    <input 
                        type="radio" 
                        name="gender" 
                        value="F"
                    >Feminino
                </span>
            </div>
        </div>
        
        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text"
                    placeholder="Separe os serviços prestados por vírgula"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>

{% endblock content %}