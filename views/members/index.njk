{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/members/create">Novo membro</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Instrutores</th>
                <th>Acompanhamento</th>
                <th>Opção</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
                <tr>
                    
                    <td>
                        <span 
                            style="background-image: url({{ instructor.avatar_url }})"
                        >
                        </span>
                        {{ instructor.name }}</td>
                    <td><div>{{ instructor.services }}</div></td>
                    <td>
                        <a href="/instructors/{{ instructor.id }}">Visualizar</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>

{% endblock content %}